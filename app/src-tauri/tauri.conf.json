  "productName": "WinScript",
  "version": "1.3.3",
  "identifier": "flick.winscript.dev",
  "build": {
    "devUrl": "http://localhost:4321/",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "WinScript",
        "width": 1200,
        "height": 776,
        "minWidth": 650,
        "minHeight": 600,
        "resizable": true,
        "visible": false,
        "center": true,
        "shadow": false,
        "transparent": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "publisher": "flick9000",
    "license": "GPL-3.0",
    "createUpdaterArtifacts": true,
    "active": true,
    "windows": {
      "nsis": {
        "installerIcon": "icons/favicon.ico",
        "sidebarImage": "icons/sidebar.bmp",
        "installMode": "both"
      }
    },
    "targets": ["nsis"],
    "icon": ["icons/favicon.ico"]
  },
  "plugins": {
    "updater": {
